<% if current_user %>
    <div class="page-header">
      <h1>Join the discussion!</h1>
    </div>

    <%= render 'form', message: @message %>
    <div class="panel panel-default" id="messages">
      <div class="panel-body">
        <ul class="media-list">
          <%= render @messages %>
        </ul>
      </div>
    </div>
<% else %>
    <%= render 'welcome' %>
<% end %>
